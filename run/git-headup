#! /usr/bin/env node

var clc = require('cli-color')

var git = require('./lib/git/git')
var isgit = require('./lib/git/is-git')

var hud = require('./lib/hud/hud')


var line__cwd = clc.bold(hud.pipe) + hud.space + clc.bold(process.cwd())
var line__git = isgit()

Promise.all
([
	line__cwd,
	line__git
])
.then(function (lines)
{
	lines.forEach(writeln)
})

function write (string)
{
	process.stdout.write(string, 'utf-8')
}

function writeln (string)
{
	write(string + hud.nl)
}
